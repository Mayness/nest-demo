{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@provider/*": [ "src/provider/*" ],
      "@module/*": [ "src/module/*" ],
      "@config/*": [ "src/config/*" ],
      "@util/*": [ "src/util/*" ]
    },
  },
  "exclude": ["node_modules"]
}
